package com.pcs.resultapplication;

import com.example.resultapplication.R;

import android.app.Activity;
import android.net.Uri;
import android.os.Bundle;
import android.view.View;
import android.view.View.OnClickListener;
import android.widget.TextView;
import android.widget.Toast;

public class ResultActivity extends Activity implements OnClickListener {
	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.result);

		TextView textview=(TextView)findViewById(R.id.data_txt);

		Uri uri=getIntent().getData();

		String choice=getIntent().getAction();

		if(uri != null)
		{


			if(choice==Constants.LoginExtras.BROWSER){

			}
			else  if(choice==Constants.LoginExtras.MUSIC){

			}
			else  if(choice==Constants.LoginExtras.FACEBOOK){

			}
			else  if(choice==Constants.LoginExtras.TEXT){
				textview.setText(getResources().getString(R.string.app_name));
			}
			else  if(choice==Constants.LoginExtras.IMAGE){

			}
			else  if(choice==Constants.LoginExtras.EDUCATION){

			}
		}
		else {
			Toast.makeText(ResultActivity.this,getResources().getString(R.string.nothing)), Toast.LENGTH_LONG).show();
		}
	}

	@Override
	public void onClick(View v) {
		// TODO Auto-generated method stub

	}

}
