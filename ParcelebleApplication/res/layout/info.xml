<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#daa620"
    android:orientation="vertical"
    android:weightSum="5" >

    <LinearLayout
        android:id="@+id/id_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/empid_txt"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:text="@string/empid" />

        <EditText
            android:id="@+id/empid_edt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_background"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" 
        android:layout_weight="1">

        <TextView
            android:id="@+id/empname_txt"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:text="@string/empname" />

        <EditText
            android:id="@+id/empname_edt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_background"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/designation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" 
        android:layout_weight="1">

        <TextView
            android:id="@+id/empdesg_txt"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:text="@string/empdesg" />

        <EditText
            android:id="@+id/empdesg_edt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_background"
            android:inputType="text" />
    </LinearLayout>

    <Button
        android:id="@+id/show_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:text="@string/employee_show" />

</LinearLayout>