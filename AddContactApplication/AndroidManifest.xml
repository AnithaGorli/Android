<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pcs.contentproviderapplication"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.pcs.contentproviderapplication.FirstActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" >
                </action>

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.pcs.contentproviderapplication.MainActivity" >
        </activity>

        <provider
            android:name=".CustomerProvider"
            android:authorities="com.pcs.provider.Customer" >
        </provider>
    </application>

</manifest>