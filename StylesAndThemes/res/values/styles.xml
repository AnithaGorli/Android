<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="MyTheme" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:windowBackground">@color/teal</item>
        <item name="android:gravity">center</item>
         <item name="android:shadowDx">1.2</item>
      <item name="android:shadowDy">1.2</item>
      <item name="android:shadowRadius">2</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textViewStyle">@style/text</item>
        <item name="android:webViewStyle">@style/WebStyle</item>
    </style>

    <style name="text" parent="android:Theme.Light">
        <item name="android:padding">4dip</item>
         <item name="android:layout_width">fill_parent</item>
          <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/aqua</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="CustomButtonStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:fontFamily">GoodDog</item>
        <item name="android:background">@drawable/button_new</item>
    </style>

    <style name="WebStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>