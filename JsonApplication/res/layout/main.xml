<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/cool">

    <Button
        android:id="@+id/download_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/downloadtxt"
        android:layout_margin="5dp"
        android:background="#81DAF5"
        
        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/id_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#00BFFF"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/firstname_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#680520"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/gender_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#680520"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/lastname_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#680520"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/username_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#680520"
        android:textSize="20sp"
        android:textStyle="bold|italic" />
      <TextView
        android:id="@+id/link_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#680520"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/name_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#680520"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/locale_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#680520"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

</LinearLayout>